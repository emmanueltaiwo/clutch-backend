{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*", "src/__test__*"]
    }
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"]
}
